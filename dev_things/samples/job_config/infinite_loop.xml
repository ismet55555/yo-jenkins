    <hudson.tasks.Shell>
      <command>#!/bin/bash

loop_number=0

while :
do
    ((loop_number=loop_number+1))
    currentDatetime=$(date +&quot;%Y-%m-%d %T&quot;)
	echo &quot;[$currentDatetime] Loop number: $loop_number&quot;
	sleep 1
done</command>
